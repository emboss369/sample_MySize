<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_height"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.username.mysize.HeightActivity">

    <TextView
        android:text="@string/txt_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/height"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="99999999"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_height"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textSize="36sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:id="@+id/spinner"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/height"
        android:entries="@array/txt_height_arr"
        android:minWidth="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <SeekBar
        android:layout_height="wrap_content"
        android:id="@+id/seekBar1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="0dp"
        android:max="200"
        android:progress="170"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_height="wrap_content"
        android:max="20"
        android:progress="17"
        android:id="@+id/seekBar2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBar1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="140"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/height1"
            android:layout_weight="1" />

        <RadioButton
            android:text="150"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/height2"
            android:layout_weight="1" />

        <RadioButton
            android:text="160"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/height3"
            android:layout_weight="1" />

        <RadioButton
            android:text="170"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/height4"
            android:layout_weight="1" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>
